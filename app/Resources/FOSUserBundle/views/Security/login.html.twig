{% extends '@FOSUser/layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<form class="bs-example form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error|trans }}</div>
    {% endif %}
    <fieldset>
        <legend>Comenzar a jugar!</legend>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
            <div class="col-lg-12">
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required" placeholder="Usuario" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Contrasena" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12 text-right">
                <input class="btn btn-success" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </div>
        <hr>
        <p>
            Todavia no estas registrado? <a href="{{ path('fos_user_registration_register') }}">Registrate!</a>
        </p>
    </fieldset>
</form>
{% endblock fos_user_content %}